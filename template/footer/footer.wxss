.footer {
	display: flex;
	justify-content: space-between;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
	height: 110rpx;
	background: #f0f0f0;
}
.footer .footer-item {
	display: flex;
	flex-direction: column;
	width: 33.33%;
	text-align: center;
}

.footer-item .img {
	width: 50rpx;
	height: 50rpx;
	margin: 10rpx auto;
}