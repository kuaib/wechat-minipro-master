.common-base{
    padding: 20rpx;
    border-bottom: 1px solid #ddd;
}

.title {
    font-size: 26rpx;
}

.base-info {
    margin-bottom: 15rpx;
}
.address .font-color {
    margin-right: 10rpx;
}
.dataList {
    padding: 10rpx;
}

.dataList {
    margin: 30rpx 0;
}
.dataList, .sales-promotion, .yue {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    height: 100rpx;
}
.dataList text {
    display: block;
    width: 70rpx;
    text-align: center;
}
.dataList .top {
    margin-bottom: 20rpx;
}

.dataList .bottom {
    height: 70rpx;
    line-height: 70rpx;
}
.dataList .bg-color {
    border-radius: 50%;
    color: #fff;
}

